<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>header</param-name>
        <param-value>Final Academic Project</param-value>
    </context-param>
    <context-param>
        <param-name>footer</param-name>
        <param-value>Copyright 2021. Coded by Matthew Ang, Hannah Carpio, Paul Feliciano, Nhel Gonzales, and Julian Mendoza.</param-value>
    </context-param>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>Listeners.userContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>Controller_Login</servlet-name>
        <servlet-class>Controllers.Controller_Login</servlet-class>
        <init-param>
            <param-name>jdbcClassName</param-name>
            <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
        </init-param>
        <init-param>
            <param-name>dbUserName</param-name>
            <param-value>app</param-value>
        </init-param>
        <init-param>
            <param-name>dbPassword</param-name>
            <param-value>app</param-value>
        </init-param>
        <init-param>
            <param-name>jdbcDriverURL</param-name>
            <param-value>jdbc:derby</param-value>
        </init-param>
        <init-param>
            <param-name>dbHostName</param-name>
            <param-value>localhost</param-value>
        </init-param>
        <init-param>
            <param-name>dbPort</param-name>
            <param-value>1527</param-value>
        </init-param>
        <init-param>
            <param-name>databaseName</param-name>
            <param-value>OhNipponDB</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Controller_SignUp</servlet-name>
        <servlet-class>Controllers.Controller_SignUp</servlet-class>
        <init-param>
            <param-name>jdbcClassName</param-name>
            <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
        </init-param>
        <init-param>
            <param-name>dbUserName</param-name>
            <param-value>app</param-value>
        </init-param>
        <init-param>
            <param-name>dbPassword</param-name>
            <param-value>app</param-value>
        </init-param>
        <init-param>
            <param-name>jdbcDriverURL</param-name>
            <param-value>jdbc:derby</param-value>
        </init-param>
        <init-param>
            <param-name>dbHostName</param-name>
            <param-value>localhost</param-value>
        </init-param>
        <init-param>
            <param-name>dbPort</param-name>
            <param-value>1527</param-value>
        </init-param>
        <init-param>
            <param-name>databaseName</param-name>
            <param-value>OhNipponDB</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Controller_Captcha</servlet-name>
        <servlet-class>nl.captcha.servlet.SimpleCaptchaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller_Captcha</servlet-name>
        <url-pattern>/captcha.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Controller_LogOut</servlet-name>
        <servlet-class>Controllers.Controller_LogOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller_Login</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller_SignUp</servlet-name>
        <url-pattern>/signup.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller_LogOut</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>
    <error-page>
        <exception-type>Exceptions.AuthenticationException</exception-type>
        <location>/errorPage.jsp</location>
    </error-page>
    <error-page>
        <exception-type>Exceptions.NullValueException</exception-type>
        <location>/errorPage.jsp</location>
    </error-page>
    <session-config>
        <session-timeout>
            120
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>landing.jsp</welcome-file>
    </welcome-file-list>
</web-app>
